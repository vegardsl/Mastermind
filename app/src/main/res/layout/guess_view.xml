<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="@color/offWhiteBackground"
    android:elevation="3dp">

    <TextView
        android:id="@+id/guess_textView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:textSize="36sp"
        android:gravity="center"
        android:text="PLACEHOLDER" />

    <GridLayout
        android:id="@+id/score_gridView"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:rowCount="2"
        android:stretchMode="spacingWidthUniform">

        <View android:id="@+id/score_1_1" style="@style/ScoreViewElement" />

        <View android:id="@+id/score_1_2" style="@style/ScoreViewElement" />

        <View android:id="@+id/score_2_1" style="@style/ScoreViewElement" />

        <View android:id="@+id/score_2_2" style="@style/ScoreViewElement" />


    </GridLayout>
</LinearLayout>